@model FitFeastExplore.Models.ExerciseDto

@{
    ViewBag.Title = "Delete Exercise";
}

<h2>Delete Exercise</h2>

<p>Are you sure you want to delete this exercise?</p>

<div>
    <h4>Exercise</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Exercise Name</dt>
        <dd>@Model.ExerciseName</dd>
        <dt>Reps</dt>
        <dd>@Model.Reps</dd>
        <dt>Sets</dt>
        <dd>@Model.sets</dd>
        <dt>Body Part</dt>
        <dd>@Model.BodyPart</dd>
        <dt>Tutorial</dt>
        <dd>@Model.YouTubeUrl</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExerciseId)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-default" })
}