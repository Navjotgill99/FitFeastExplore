@model IEnumerable<FitFeastExplore.Models.IngredientDto>
@{
    ViewBag.Title = "List";
}

<div class="container mt-5">
    <h2 class="mb-4">Ingredient List</h2>

    <a href="/Home/Recipes" class="btn btn-secondary my-3">Back</a>


    <form method="get" action="/Ingredient/List">
        <div class="input-group mb-3">
            <input type="text" name="searchString" class="form-control" value="@ViewBag.searchString" placeholder="Search by ingredient name..." />
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    @foreach (var ingredient in Model)
    {
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">
                    <a href="/Ingredient/Show/@ingredient.IngredientId" class="text-white">
                        @ingredient.IngredientName - @ingredient.Quantity
                    </a>
                </h3>
            </div>
        </div>
    }
</div>