@model FitFeastExplore.Models.RecipeDto
@{
    ViewBag.Title = "Edit";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Edit Recipe</h2>
        </div>
        <div class="card-body">
            <form action="/Recipe/Update/@Model.RecipeId" method="POST">
                <input type="hidden" name="RecipeId" value="@Model.RecipeId" />
                <div class="form-group">
                    <label for="Category">Category :</label>
                    <input type="text" class="form-control" id="Category" name="Category" value="@Model.Category" />
                </div>
                <div class="form-group">
                    <label for="Recipe Name">Recipe Name:</label>
                    <input type="text" class="form-control" id="RecipeName" name="RecipeName" value="@Model.RecipeName" />
                </div>
                <div class="form-group">
                    <label for="Instructions">Instructions:</label>
                    <input type="text" class="form-control" id="Instructions" name="Instructions" value="@Model.Instructions" />
                </div>
                <div class="form-group">
                    <label for="Protein">Protein:</label>
                    <input type="text" class="form-control" id="Protein" name="Protein" value="@Model.Protein" />
                </div>
                <div class="form-group">
                    <label for="Calories">Calories:</label>
                    <input type="text" class="form-control" id="Calories" name="Calories" value="@Model.Calories" />
                </div>
                <div class="form-group">
                    <label for="CookingTime">Cooking Time:</label>
                    <input type="text" class="form-control" id="CookingTime" name="CookingTime" value="@Model.CookingTime" />
                </div>
                <div class="form-group">
                    <label for="IngredientId">Ingredient Id:</label>
                    <input type="number" class="form-control" id="IngredientId" name="IngredientId" value="@Model.Ingredients" />
                </div>
                <div class="form-group">
                    <label for="ImageFile" class="form-label">Recipe Image Path:</label>
                    <input type="text" class="form-control" id="ImagePath" name="ImagePath" value="@Model.ImagePath"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Update Recipe" />
                    <a href="/Recipe/List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>