﻿@model FitFeastExplore.Models.WorkOutPlanDto

<!DOCTYPE html>
<html>
<head>
    <title>Delete WorkOut Plan</title>
</head>
<body>
    <h2>Delete WorkOut Plan</h2>
    <div class="card mb-3">
        <h3>Are you sure you want to delete this exercise from your plan?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>Exercise Name</dt>
                <dd>@Model.ExerciseName</dd>
                <dt>Reps</dt>
                <dd>@Model.Reps</dd>
                <dt>Sets</dt>
                <dd>@Model.sets</dd>
                <dt>Body Part</dt>
                <dd>@Model.BodyPart</dd>
                <dt>Tutorial</dt>
                <dd>@Model.YouTubeUrl</dd>
                <dt>Notes</dt>
                <dd>@Model.Notes</dd>
            </dl>

            <form action="/WorkOutPlan/Delete/@Model.WorkOutPlanID" method="post">
                <input type="hidden" name="WorkOutPlanID" value="@Model.WorkOutPlanID" />
                <button class="btn btn-primary btn-md" type="submit" value="Delete">Delete &raquo;</button>
            </form>
        </div>
    </div>

        <div>
            <a href="/WorkOut/Details/@Model.WorkOutPlanID">Back to Details</a>
        </div>
</body>
</html>

<style>
    * {
        text-align: center;
    }

    .card {
        padding: 20px;
    }
</style>